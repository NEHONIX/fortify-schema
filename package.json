{
  "name": "fortify-schema",
  "version": "1.0.6",
  "description": "TypeScript interface-like schema validation system that's easier to use than Zod",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/schema.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/schema.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && rollup -c",
    "build:rollup": "npm run clean && rollup -c",
    "build:simple": "node build.js",
    "build:tsc": "npm run clean && tsc -p tsconfig.build.json",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test:build": "npm run test:build:cjs && npm run test:build:esm",
    "test:build:cjs": "node test-build-cjs.cjs",
    "test:build:esm": "node test-build-esm.mjs",
    "prepublishOnly": "npm run build && npm run test:build",
    "clean": "rimraf dist"
  },
  "keywords": [
    "schema",
    "validation",
    "typescript",
    "interface",
    "zod",
    "joi",
    "yup",
    "runtime-validation",
    "type-safe",
    "schema-validation"
  ],
  "author": "Nehonix Team <support@nehonix.space> (https://nehonix.space)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nehonix-Team/fortify-schema.git"
  },
  "bugs": {
    "url": "https://github.com/Nehonix-Team/fortify-schema/issues"
  },
  "homepage": "https://github.com/Nehonix-Team/fortify-schema#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-typescript": "^11.1.3",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "rollup": "^3.29.2",
    "rollup-plugin-dts": "^6.0.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {},
  "engines": {
    "node": ">=16.0.0"
  }
}
